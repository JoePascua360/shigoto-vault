{
  "name": "shigotovault",
  "private": true,
  "type": "module",
  "version": "1",
  "scripts": {
    "build": "react-router build",
    "dev": "docker compose up -d && tsx watch --no-warnings --env-file=.env --exclude ./sql ./server",
    "start": "tsx --env-file=.env server.ts",
    "typecheck": "react-router typegen && tsc -b",
    "test": "vitest",
    "prod:build": "npm run build && docker build -t shigoto-vault:prod .",
    "dev:backup-db": "docker exec postgresdb pg_dump shigoto-vault > ./sql/backup.sql",
    "dev:restore-db": "docker exec postgresdb psql -d shigoto-vault -f /var/lib/postgresql/backup.sql"
  },
